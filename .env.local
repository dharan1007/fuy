# ---- App URLs ----
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# ---- WebAuthn ----
# RP ID MUST be the effective domain. For localhost, it is "localhost".
NEXT_PUBLIC_RP_ID=localhost
NEXT_PUBLIC_ORIGIN=http://localhost:3000

# ---- Auth / Dev toggles ----
DEV_BYPASS_AUTH=true
# For NextAuth in dev, you can omit NEXTAUTH_SECRET; NextAuth will generate one in dev.
# If you want to set it explicitly, uncomment the next line:
# NEXTAUTH_SECRET=dev-only-unsafe-secret

# ---- Database ----
# SQLite file relative to the project root. Works fine for dev.
DATABASE_URL=file:./dev.db
