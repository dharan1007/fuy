# Database URL
# For development: file:./prisma/dev.db
# For production: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/fuy

# Email Configuration (Resend)
EMAIL_FROM="Fuy <noreply@yourdomain.com>"
RESEND_API_KEY=re_your_api_key_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_random_secret_key_here_min_32_chars
