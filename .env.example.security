# Security Environment Variables

# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ======================
# EXISTING VARIABLES (keep your current values)
# ======================
DATABASE_URL=your_database_url_here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# ======================
# NEW SECURITY VARIABLES
# ======================

# API Security
API_REQUEST_SECRET=generate_32char_secret_here
HASH_SECRET=generate_32char_secret_here
ENCRYPTION_KEY=exactly_32_characters_required

# CORS & Origins (comma-separated)
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8081

# Rate Limiting
RATE_LIMIT_REQUESTS=100
AUTH_RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=900000

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_API_SECRET=same_as_API_REQUEST_SECRET

# Session Security
SESSION_MAX_AGE=2592000
JWT_EXPIRATION=2592000

# Password Security
BCRYPT_ROUNDS=12
MIN_PASSWORD_LENGTH=8

# Security Monitoring
ENABLE_AUDIT_LOG=true
SECURITY_LOG_ENABLED=true
DEBUG_SECURITY=false

# Environment
NODE_ENV=development
